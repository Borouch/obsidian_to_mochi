{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true

    }
}
